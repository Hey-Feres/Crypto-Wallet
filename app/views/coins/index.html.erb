<p id="notice"><%= notice %></p>

<h1>Coins</h1>
<center>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Acronym</th>
      <th>Url image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr> 
        <td>
          <center>
            <%= link_to coin.description, coin %>
          </center>
        </td>

        <td>
          <center>
            <%= coin.acronym %></td>
          </center>
        <td> 
          <center>
            <%= image_tag coin.url_image, width: 30, height: 30 %> 
          </center>  
        </td>

        <td>
          <center>
            <%= link_to 'Editar', edit_coin_path(coin) %>
          </center>
        </td>

        <td>
          <center>
            <%= link_to 'X', coin, method: :delete, data: { confirm: 'Are you sure?' } %>
          </center>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>

<br>

<%= link_to 'New Coin', new_coin_path %>
